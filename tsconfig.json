{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
